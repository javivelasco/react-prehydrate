{
  "private": true,
  "packageManager": "pnpm@8.15.7",
  "scripts": {
    "build": "turbo build",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,mjs,json,md,yaml,yml,css}\"",
    "version:prepare": "changeset version && pnpm install --no-frozen-lockfile",
    "release": "turbo build --filter=react-prehydrate && changeset publish",
    "dev:example": "turbo dev --filter=next-resizable-sidebars",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "3.8.1",
    "turbo": "^2.8.7"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs}": [
      "prettier --write"
    ],
    "*.{json,md,yaml,yml,css}": [
      "prettier --write"
    ]
  }
}
